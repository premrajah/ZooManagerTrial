<Window x:Class="ZooManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZooManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Zoo List" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.366,-0.152" Width="118" Height="26"/>
        <ListBox Name="listZoos" HorizontalAlignment="Left" Height="235" Margin="10,36,0,0" VerticalAlignment="Top" Width="193" SelectionChanged="listZoos_SelectionChanged"/>
        <Label Content="Associated Animals" HorizontalAlignment="Left" Margin="227,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.366,-0.152" Width="118" Height="26"/>
        <ListBox x:Name="listAssociatedAnimals" HorizontalAlignment="Left" Height="235" Margin="227,36,0,0" VerticalAlignment="Top" Width="193" SelectionChanged="listAssociatedAnimals_SelectionChanged"/>

    </Grid>
</Window>
